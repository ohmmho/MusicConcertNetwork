<h3>Add a new wonderful concert</h3>

 <%= form_for [@concert] do |f| %>

  <br>
  <%= f.label :band %>
  <%= f.text_field :band %>
  <br>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br>
  <%= f.label :venue %>
  <%= f.text_field :venue %>
  <br>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>


  <%= f.submit 'Save' %>
  <%= link_to('Cancel', '/') %>

<% end %>